<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Language">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a boolean</option>
            </constraint>
        </property>

        <property name="locale">
            <constraint name="NotBlank">
                <option name="message">'locale' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'locale' should be a boolean</option>
            </constraint>
        </property>

        <property name="showOnPage">
            <constraint name="NotNull">
                <option name="message">'showOnPage' cannot be null</option>
            </constraint>

            <constraint name="Type">
                <option name="type">bool</option>
                <option name="message">'showOnPage' should be a boolean</option>
            </constraint>
        </property>

        <property name="description">
            <constraint name="NotBlank">
                <option name="message">'description' should be a boolean</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'description' should be a string</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Locale">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a boolean</option>
            </constraint>
        </property>

        <property name="default">
            <constraint name="NotNull">
                <option name="message">'default' should not be null</option>
            </constraint>

            <constraint name="Type">
                <option name="type">bool</option>
                <option name="message">'default' should be a boolean</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Lesson">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a boolean</option>
            </constraint>
        </property>

        <property name="locale">
            <constraint name="NotBlank">
                <option name="message">'locale' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'locale' should be a boolean</option>
            </constraint>
        </property>

        <property name="temporaryText">
            <constraint name="NotNull">
                <option name="message">'temporaryText' cannot be null</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'temporaryText' should be a string</option>
            </constraint>
        </property>

        <property name="language">
            <constraint name="Valid" />

            <constraint name="NotBlank">
                <option name="message">'language' should not be blank</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Word">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a string</option>
            </constraint>
        </property>

        <property name="type">
            <constraint name="NotBlank">
                <option name="message">'type' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'type' should be a string</option>
            </constraint>
        </property>

        <property name="language">
            <constraint name="Valid" />

            <constraint name="NotBlank">
                <option name="message">'language' should not be blank</option>
            </constraint>
        </property>

        <property name="description">
            <constraint name="NotBlank">
                <option name="message">'description' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'description' should be a string</option>
            </constraint>
        </property>

        <property name="level">
            <constraint name="NotBlank">
                <option name="message">'level' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">int</option>
                <option name="message">'level' should be a string</option>
            </constraint>
        </property>

        <property name="translations">
            <constraint name="Valid">
                <option name="traverse">true</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Category">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a boolean</option>
            </constraint>
        </property>

        <property name="locale">
            <constraint name="NotBlank">
                <option name="message">'locale' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'locale' should be a boolean</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\LearningMetadata\Doctrine\Entity\Translation">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a string</option>
            </constraint>
        </property>

        <property name="valid">
            <constraint name="Type">
                <option name="type">bool</option>
                <option name="message">'valid' should be a boolean</option>
            </constraint>
        </property>

        <property name="locale">
            <constraint name="NotBlank">
                <option name="message">'locale' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'locale' should be a boolean</option>
            </constraint>
        </property>
    </class>

    <class name="App\DataSourceLayer\Infrastructure\Security\Doctrine\Entity\User">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">'name' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'name' should be a string</option>
            </constraint>
        </property>

        <property name="lastname">
            <constraint name="NotBlank">
                <option name="message">'lastname' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'username' should be a string</option>
            </constraint>
        </property>

        <property name="username">
            <constraint name="NotBlank">
                <option name="message">'username' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'username' should be a string</option>
            </constraint>
        </property>

        <property name="email">
            <constraint name="NotBlank">
                <option name="message">'username' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'email' should be a string</option>
            </constraint>

            <constraint name="Email">
                <option name="message">The email "{{ value }}" is not a valid email.</option>
            </constraint>
        </property>

        <property name="password">
            <constraint name="NotBlank">
                <option name="message">'username' should not be blank</option>
            </constraint>

            <constraint name="Type">
                <option name="type">string</option>
                <option name="message">'password' should be a string</option>
            </constraint>
        </property>

        <property name="enabled">
            <constraint name="NotNull">
                <option name="message">'enabled' should not be null</option>
            </constraint>

            <constraint name="Type">
                <option name="type">boolean</option>
                <option name="message">'enabled' should be a string</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
